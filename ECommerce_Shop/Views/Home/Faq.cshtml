@model List<FAQ>
    @{
        ViewBag.Title = "Faq";
    }

    

    <section class="container">
        <!-- Accordion -->
        <div class="accordion-wrap">
            <h3 class="component-ttl component-ttl-ct"><span>Frequently asked questions</span></h3>
            <div class="accordion-tab-cont">
                @if (Model.Any())
                {
                    foreach (var faq in Model)
                    {
                        <p data-accordion-num="@(faq.FAQId)" class="accordion-tab-mob" data-accordion="#accordion-tab-@(faq.FAQId)">
                            @faq.Question
                        </p>
                        <div class="accordion-tab" id="accordion-tab-@(faq.FAQId)">
                            <div class="accordion-inner">
                                @faq.Answer
                                <span class="tabs-margin"></span>
                            </div>
                        </div>
                    }
                }

               
                 
            </div>
        </div>
</section>