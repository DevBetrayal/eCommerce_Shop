@model List<CollectionPoint>
@{
    ViewBag.Title = "Collection Points";
}
<style>
    .prodtb-i .prodtb-i-toggle {
        width: 44px;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        display: block;
        border: none;
        border-right-color: currentcolor;
        border-right-style: none;
        border-right-width: medium;
        border-right: 1px solid #e0e4f6;
        background: none;
        padding: 0;
    }

    .prodtb-i .prodtb-i-toggle:hover ,.prodtb-i .prodtb-i-toggle {
        pointer-events: none !important;
        cursor: none !important;
    }

</style>
<section class="container">
    <!-- Accordion -->
    <div class="accordion-wrap">
        <h3 class="component-ttl component-ttl-ct"><span>Collection Points</span></h3>
        <div class="accordion-tab-cont">
            <div class="prod-items section-items prod-tb">
                @if (Model.Any())
                {
                    foreach (var coll in Model)
                    {
                        <div class="prodtb-i">
                            <div class="prodtb-i-top">
                                <button class="prodtb-i-toggle" type="button"></button>
                                <h3 class="prodtb-i-ttl"><a href="javascript:void(0)">@coll.Address</a></h3>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>