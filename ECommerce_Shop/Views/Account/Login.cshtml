@{
    ViewBag.Title = "Index";
}

<section class="container stylization maincont">


    <ul class="b-crumbs">
        <li>
            <a href="@Url.Action("Index","Home")">
                Home
            </a>
        </li>
        <li>
            <span>Registration / Login</span>
        </li>
    </ul>
    <h1 class="main-ttl"><span>Registration / Login</span></h1>
    <div class="auth-wrap">
        <div class="auth-col">
            <h2>Login</h2>
            @using (Html.BeginForm("Login", "Account", new { area = "" }, FormMethod.Post, new { id = "frm", @class = "login" }))
            {
                @Html.AntiForgeryToken()
                <p>
                    <label for="username">E-mail <span class="required">*</span></label><input type="text" id="username" name="Email">
                </p>
                <p>
                    <label for="password">Password <span class="required">*</span></label><input type="password" id="password" name="Password">
                </p>
                <p class="auth-submit">
                    <input type="submit" value="Login">
                    <input type="checkbox" id="rememberme" value="forever">
                    <label for="rememberme">Remember me</label>
                </p>
                <p class="auth-lost_password">
                    <a href="@Url.Action("ForgotPassword", "Account")">Lost your password?</a>
                </p>
            }
        </div>
        <div class="auth-col">
            <h2>Register</h2>
            @using (Html.BeginForm("Register", "Account", new { area = "" }, FormMethod.Post, new { id = "frm", @class = "register" }))
            {
                @Html.AntiForgeryToken()
                <p>
                    <label for="reg_email">Email <span class="required">*</span></label><input type="email" id="reg_email">
                </p>
                <p>
                    <label for="reg_password">Password <span class="required">*</span></label><input type="password" id="reg_password">
                </p>
                <p class="auth-submit">
                    <input type="submit" value="Register">
                </p>
            }
        </div>
    </div>



</section>

